<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Anketsayfa2">
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hangi mobil oyunları oynuyorsunuz ?"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/s1c1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ASPHALT "
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/s1c2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PUBG MOBILE"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/s1c3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FORTNITE"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/s1c4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MC VERSUS"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ne sıklıkla oynuyorsunuz ?"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/rg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Günde 1-3 saat"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Günde 3-6 saat"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Günde 6+ saat"
                android:textSize="24sp" />
        </RadioGroup>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">>"
            android:textSize="24sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>